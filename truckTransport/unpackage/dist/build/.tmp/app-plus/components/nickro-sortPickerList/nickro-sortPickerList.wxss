
.wxaSortPickerList{
		position: relative;
		height: 100%;
}
.wxaSortPickerTemTags {
	position: absolute;
	/* position: fixed; */
	top: 50%;
	right: 20rpx;
	color: #1cc2f7;
	-webkit-transform: translate(0, -50%);
	    -ms-transform: translate(0, -50%);
	        transform: translate(0, -50%);
}
.wxaSortPickerTemTag {
	text-align: center;
	padding: 2rpx;
	font-size: 32rpx;
	line-height: 34rpx;
}
.wxaSortPickerFixedTag {
	position: fixed;
	width: 100%;
}
.wxaSortPickerTag {
	background-color: #f3f7f8;
	font-size: 32rpx;
	font-weight: bold;
	color: #46595f;
	height: 60rpx;
	line-height: 60rpx;
	padding: 0 32rpx;
}
.wxaSortPickerItem-box {
	background-color: #fff;
	padding: 0 32rpx;
}
.wxaSortPickerItem {
	height: 88rpx;
	line-height: 88rpx;
	border-bottom: 1px solid #dee4e4;
	color: #46595f;
	font-size: 32rpx;
}
.wxaSortPickerItem:last-child {
	border-bottom: none;
}

