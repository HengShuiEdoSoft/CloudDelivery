
.dui-money-card-wrapper {
	margin: 20rpx 30rpx 40rpx 30rpx;
	border: 1rpx solid #e2e2e2;
	border-radius: 15rpx;
	-webkit-box-shadow: 0rpx 4rpx 10rpx #e2e2e2;
	        box-shadow: 0rpx 4rpx 10rpx #e2e2e2;
}
.dui-money-card {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: start;
	-webkit-align-items: flex-start;
	    -ms-flex-align: start;
	        align-items: flex-start;
	height: 280rpx;
	padding: 0 50rpx;
	background-color: #3c3c46;
	border-radius: 15rpx;
	color: #fff;
}
.dui-money-card text:first-child {
	font-size: 24rpx;
	margin: 60rpx 0 20rpx 0;
}
.dui-money-card text:nth-child(2) {
	font-size: 36rpx;
}
.dui-money-number {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
}
.dui-money-number view {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.dui-money-number view:first-child {
	margin-bottom: 8rpx;
}
.dui-money-recharge-btn {
	font-size: 24rpx;
	background-color: #ff5723;
	margin-top: 30rpx;
	padding: 15rpx 24rpx;
	border-radius: 30rpx;
	letter-spacing: 4rpx;
}
.icon-Raidobox-xuanzhong {
	font-size: 18rpx;
	color: #dbdbdb;
}
.icon-wenhao-yuankuang {
	color: #9a9a9a;
}
.dui-money-number-title {
	margin: 0 18rpx;
	font-size: 24rpx;
}
.icon-fapiaotianchong,
.icon-youhuijuan {
	font-size: 28rpx;
}
.icon-wenhao-yuankuang {
	font-size: 24rpx;
}
.dui-money-specific {
	font-size: 20rpx;
	color: #858585;
	margin-left: 40rpx;
}
.dui-coupon-title {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	margin-left: 16rpx;
	font-size: 28rpx;
}
.dui-coupon-title+text,
.dui-coupon-title-tips {
	font-size: 26rpx;
	color: #858585;
}
.dui-coupon-title-tips {
	padding-left: 44rpx;
}

