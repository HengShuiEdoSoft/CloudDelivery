
.dui-coupon-input {
	background-color: #fff;
	padding: 35rpx;
}
.ui-coupon-detail{
	padding:28rpx;
	display:none;
	color:#999;
	background: #fff;
}
.ui-coupon-detail.active{
	display:block;
}
.ui-coupon-item{
	margin:30rpx 16rpx;
	font-size:14px;
}
.ui-coupon-subtext{
	font-size:12px;
	color:#999;
}
.ui-coupon-item-body{
	display:-webkit-box;
	display:-webkit-flex;
	display:-ms-flexbox;
	display:flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	margin-bottom: 8rpx;
	padding:28rpx;
	border-bottom: 4rpx solid #FF5723;
	background: #fff;
	border-radius: 8rpx;
}
.ui-coupon-price{
	padding-right:20rpx;
	margin-right:20rpx;
	color:#FF5723;
	border-right:1px dashed #eee;
}
.ui-coupon-price-num{
	font-size:36px;
}
.ui-coupon-center{
	-webkit-box-flex:1;
	-webkit-flex:1;
	    -ms-flex:1;
	        flex:1;
	font-size: 16px;
}
.ui-coupon-time{
	padding-top:8rpx;
	font-size:12px;
}
.ui-coupon-detail-btn{
	padding-top:12rpx;
	font-size: 12px;
	color:#999;
}
.ui-coupon-use{
	display:inline-block;
	padding:8rpx 24rpx;
	border-radius: 54rpx;
	color:#FF5723;
	border:1px solid #FF5723;
}

